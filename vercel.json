{
  "version": 2,
  "builds": [
    { "src": "client/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/client/menu/mainmenu/mainmenu.html" },
    { "source": "/menu/:path*", "destination": "/client/menu/:path*" },
    { "source": "/audio/:path*", "destination": "/client/audio/:path*" },
    { "source": "/img/:path*", "destination": "/client/img/:path*" },
    { "source": "/game/singleplayer.html", "destination": "/client/game/singleplayer.html" },
    { "source": "/game/styles.css", "destination": "/client/game/styles.css" },
    { "source": "/game/script.js", "destination": "/client/game/script.js" },
    { "source": "/game/:id", "destination": "/client/game/index.html" },
    { "source": "/game", "destination": "/client/game/index.html" },
    { "source": "/:path*", "destination": "/client/:path*" }
  ]
}


